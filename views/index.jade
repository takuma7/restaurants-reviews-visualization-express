extends layout

doctype html
html
  head
    title Restaurants in Tokyo
    meta(charset='utf-8')
    link(href='style.css', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='public/javascript/d3.min.js')
    script(type='text/javascript', src='public/javascript/queue.min.js')
    script(type='text/javascript', src='public/javascript/segmenter.js')
    script(type='text/javascript', src='public/javascript/d3.layout.cloud.js')
    script(type='text/javascript', src='public/javascript/jquery-2.1.3.min.js')
    style.
      #map-canvas {
      width: 800px;
      height: 600px;
      }
      .layer {
      position: relative;
      }
      .layer svg {
      position: absolute;
      top: -4000px;
      left: -4000px;
      width: 8000px;
      height: 8000px;
      }
      .wordcloud {
      position: absolute;
      top: 8px;
      left: 808px;
      width: 545px;
      height: 200px;
      }
      div.tooltip {
      position: absolute;
      text-align: center;
      width: auto;
      height: auto;
      z-index: 999999999;
      padding: 2px;
      font: 12px sans-serif;
      background: lightsteelblue;
      border: 0px;
      border-radius: 8px;
      }
    script(src='https://maps.googleapis.com/maps/api/js')
  body
    script(type='text/javascript', src='/javascripts/rests-review-vis.js')
    div
      input#address(type='textbox', value='文京本郷')
      input(type='button', value='検索', onclick='getLocation()')
    #map-canvas
